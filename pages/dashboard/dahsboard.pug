extends ../../templates/layout

block content
    .page-header
        ol.breadcrumb
            // breadcrumb
            li.breadcrumb-item
                a(href='#') Home
            li.breadcrumb-item.active(aria-current='page')=title
        // End breadcrumb
    .row
        .col-sm-12.col-md-6.col-lg-6.col-xl-3
            .card.overflow-hidden
                .card-header.custom-header
                    div
                        h3.card-title New Patient
                        h6.card-subtitle Overview of this month
                    .card-options
                        label.custom-switch
                            input.custom-switch-input(type='checkbox', name='custom-switch-checkbox')
                            span.custom-switch-indicator
                .card-body
                    .d-flex
                        div
                            h5.text-muted Total
                            h2.text-dark.count.mt-0.font-30.mb-0 3
                        span.sparkline_bar2.ml-auto
                .card-footer
                    span.text-left
                        i.si.si-user.text-success.mr-1
                        |  1 Male
                    span.float-right
                        i.si.si-user-female.text-danger.mr-1
                        |  2 Female
        //  col end
