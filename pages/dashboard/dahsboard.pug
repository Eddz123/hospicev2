    .row
        .col-xl-12.col-lg-12.col-md-12
            .card
                .card-header.custom-header
                    div
                        h3.card-title Patient Active And Discharge Year Of 2020
                        h6.card-subtitle Overview of this year live charts
                    .card-options
                        a.mr-4.text-default(href, data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='true')
                            span.fa.fa-ellipsis-v
                        ul.dropdown-menu.dropdown-menu-right(role='menu')
                            li
                                a(href='#')
                                    i.si.si-plus.mr-2
                                    | Add
                            li
                                a(href='#')
                                    i.si.si-trash.mr-2
                                    | Remove
                            li
                                a(href='#')
                                    i.si.si-eye.mr-2
                                    | View
                            li
                                a(href='#')
                                    i.si.si-settings.mr-2
                                    | More
                .card-body
                    .row
                        .col-xl-9.col-lg-12.col-md-12.border-right
                            
                        .col-xl-3.collg-12.col-md-12
                            .clearfix.mb-4
                                .float-left
                                    h2.mb-0.text-primary.mainvalue.mb-2 100
                                    p.text-muted Active Patients
                                .float-right.text-right.mt-1
                                    span.pie(data-peity='{ "fill": ["#f0f3f7", "#1753fc"]}') 2/5
                            .clearfix.mb-4
                                .float-left
                                    h2.mb-0.text-danger.mainvalue.mb-1 5
                                    p.text-muted Discharge Patients
                                .float-right.text-right.mt-1
                                    span.pie(data-peity='{ "fill": ["#ff6666", "#f0f3f7"]}') 226,134
                            .text-center
                                a.btn.btn-primary.btn-block(href='#') View more
